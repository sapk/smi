{
  "name": "smi",
  "homepage": "https://github.com/sapk/smi",
  "authors": [
    "Antoine GIRARD <sapk@sapk.fr>"
  ],
  "description": "Simple Monitoring Interface",
  "main": "",
  "license": "MIT",
  "private": true,
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests"
  ],
  "dependencies": {
    "jquery": "^3.1.1",
    "bootstrap": "^3.3.7",
    "font-awesome-bower": "^4.7.0"
  },
  "install": {
    "base": "static/lib/",
    "path": {
      "js": "{name}/js",
      "css": "{name}/css",
      "eot": "{name}/fonts",
      "svg": "{name}/fonts",
      "ttf": "{name}/fonts",
      "woff": "{name}/fonts"
    },
    "sources": {
      "bootstrap": [
        "bower_components/bootstrap/dist/css/bootstrap.min.css",
        "bower_components/bootstrap/dist/js/bootstrap.min.js"
      ],
      "jquery": "bower_components/jquery/dist/jquery.min.js"
    }
  }
}
